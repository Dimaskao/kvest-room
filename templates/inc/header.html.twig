<header id="header">
    <div class="inner">
        <a href="{{ path('app_home') }}"><h1 id="logo">Kvestroom</h1></a>
        <nav id="nav">
            <ul>
                {% set uri =  app.request.requestUri  %}
                {% if  app.request.get('_route')  == 'app_home' %}
                    <li class="current_page_item"><a href="{{ path('app_home') }}">Головна</a></li>
                {% else %}
                    <li><a href="{{ path('app_home') }}">Головна</a></li>
                {% endif %}

                {% if  app.request.get('_route')  == 'app_rooms' %}
                    <li class="current_page_item"><a href="{{ path('app_rooms') }}">Квест кімнати</a></li>
                {% else %}
                    <li><a href="{{ path('app_rooms') }}">Квест кімнати</a></li>
                {% endif %}

                {% if app.user %}
                    {% if  app.request.get('_route')  == 'app_profile' %} <li class="current_page_item"><a href="{{ path('app_profile') }}">Профіль</a></li>
                    {% else %}<li><a href="{{ path('app_profile') }}">Профіль</a></li>{% endif %}
                {% else %}
                    {% if  app.request.get('_route')  == 'app_login' %}<li class="current_page_item"><a href="{{ path('app_login') }}">Увійти</a></li>
                    {% else %}<li><a href="{{ path('app_login') }}">Уійти</a></li>{% endif %}
                {% endif %}

                {% if is_granted('ROLE_ADMIN')%}
                    {% if  app.request.get('_route')  == 'app_admin' %}<li class="current_page_item"><a href="{{ path('app_admin') }}">Редактор</a></li>
                    {% else %}<li><a href="{{ path('app_admin') }}">Редактор</a></li>{% endif %}
                {% endif %}
            </ul>
        </nav>
    </div>
</header>