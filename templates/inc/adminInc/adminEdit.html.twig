<form action="{{ path('app_admin_edit') }}" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="room" value="{{ roomToEdit.id }}">
    <div class="field-block">
        <label for="roomName">Назва: </label>
        <input name="name" required id="roomName" value="{{ roomToEdit.name }}"/>
    </div>
    <div class="field-block">
        <label for="roomName"> Фото: </label>
        <input class="file" type="file" name="photo">
    </div>
    <div class="field-block">
        <label for="roomDescription">Опис: </label>
        <textarea id="roomDescription" required name="description">{{ roomToEdit.description }}</textarea>
    </div>
    <div class="field-block">
        <label for="peopleCount">
            Кількість людей від - до<br>
            Приклад: 2-4
        </label>
        <input id="peopleCount" required name="peopleCount" value="{{ roomToEdit.peopleCount }}"/><br>
        <label for="timeCount">
            Час у хв. <br>
            Приклад: 45
        </label>
        <input id="timeCount" required name="timeCount" value="{{ roomToEdit.timeCount }}"/>
    </div>
    <div class="field-block">
        <span class="check-text">Зробити доступною</span>
        <input id="check" name="available" value="1" {% if roomToEdit.available == 1%} checked {% endif %}type="radio"> так
        <input id="check" name="available" value="0" {% if roomToEdit.available == 0%} checked {% endif %} type="radio"> ні
    </div>
    <button type="submit" name="confirm_edit" value="confirm_edit!">Підтвердити</button>
</form>